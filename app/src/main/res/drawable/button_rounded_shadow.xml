<!-- File: res/drawable/button_rounded_shadow.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="#55000000" /> <!-- Warna bayangan, misalnya hitam transparan -->
            <corners android:radius="9dp" /> <!-- Radius sudut untuk bayangan -->
            <padding
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp" />
        </shape>
    </item>

    <!-- Button layer -->
    <item android:bottom="4dp" android:left="4dp" android:right="4dp" android:top="4dp">
        <shape
            android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Warna latar belakang tombol -->
            <corners android:radius="9dp" /> <!-- Radius sudut tombol -->
        </shape>
    </item>
</layer-list>
